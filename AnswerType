package application;

import javafx.application.Application;
import javafx.geometry.Insets;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.control.TextField;
import javafx.scene.layout.VBox;
import javafx.stage.Stage;

public class AnswerType extends Application {

	@Override
	public void start(Stage primaryStage) throws Exception {
		 VBox vb = new VBox();
		    vb.setPadding(new Insets(20, 50, 50, 50));
		    vb.setSpacing(10);
		    Label topLabel = new Label("Choose your answer Type");
		    vb.getChildren().add(topLabel);
		    Button b1 = new Button("Multiple Choice Questions");
		    vb.getChildren().add(b1);
		    Button b2 = new Button("True/False");
		    vb.getChildren().add(b2);
		    Scene scene = new Scene(vb);
		    primaryStage.setScene(scene);
		    primaryStage.show();
		
	}

}
